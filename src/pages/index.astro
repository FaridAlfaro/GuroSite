---
import Welcome from "../components/Welcome.astro";
import Works from "../components/works/Works.astro";
import Call from "../components/Header/Call.astro";
import Layout from "../layouts/Layout.astro";
import Slider from "../components/Slider/Slider.astro";
import Contact from "../components/contacto/Contact.astro";
import Paquetes from "../components/Paquetes/Paquetes.astro";
---

<Layout>
  <Welcome />
  <section class="fade-section"><Call /></section>
  <section class="fade-section middle-section"><Slider /></section>
  <section class="fade-section"><Works /></section>
  <section class="fade-section middle-section"><Paquetes /></section>
  <section class="fade-section"><Contact/></section>
  <div class="compu fade-section">
    <h1>Actualmente nuestro sitio de escritrio esta en mantenimiento</h1>
    <p>Visita nuestra versión móvil desde tu teléfono</p>
  </div>
</Layout>

<style>
  body {
    transition: background-color 0.6s ease;
  }
  .fade-section {
    opacity: 0;
    transition: opacity 0.6s ease;
  }
  section {
    /* margin-bottom: 100px; */
  }
  .titular {
    margin-left: 5%;
    width: 80%;
    color: var(--contrast);
    p {
      color: #999;
    }
  }
  .compu {
    display: none;
  }
  @media (width > 768px) {
    section {
      display: none;
    }
    .compu {
      display: block;
      height: 100vh;
      width: 100vw;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      h1 {
        font-size: 3rem;
      }
    }
  }
</style>
