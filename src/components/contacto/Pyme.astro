<section class="pyme">
    <h2>Programa <span>Pyme</span></h2>
    <p>
      Si conocés alguna pyme que creas que necesite de nuestra ayuda, 
      podés colocar sus datos y trataremos de contactarla.
      <span>
        Recibirás un porcentaje como agradecimiento :)
      </span>
    </p>
    <form
      data-netlify="true"
      netlify-honeypot="bot-field"
      name="Pyme"
      method="POST"
      action="/success"
      onsubmit="return validarFormulario()"
    >
      <input type="hidden" name="bot-field" />
  
      <!-- TUS DATOS -->
      <h3 class="form-subtitle">Tus datos</h3>
      <div style="margin-bottom: 20px;">
        <label for="tu_nombre">Tu nombre:
          <input type="text" id="tu_nombre" name="tu_nombre" />
        </label>
        <label for="tu_telefono">Tu teléfono:
          <input type="text" id="tu_telefono" name="tu_telefono" />
        </label>
      </div>
  
      <!-- DATOS DE LA PYME -->
      <h3 class="form-subtitle">Datos de la <span>Pyme</span></h3>
      <div style="margin-bottom: 20px;">
        <label for="nombre_empresa">Nombre de la empresa:
          <input type="text" id="nombre_empresa" name="nombre_empresa" />
        </label>
        <label for="red_social">Red social:
          <input type="text" id="red_social" name="red_social" />
        </label>
        <label for="email_empresa">Email:
          <input type="email" id="email_empresa" name="email_empresa" />
        </label>
        <label for="telefono_empresa">Teléfono:
          <input type="text" id="telefono_empresa" name="telefono_empresa" />
        </label>
      </div>
  
      <button type="submit">Enviar</button>
    </form>
  </section>
  
  <script type="module">
    function validarFormulario() {
      const redSocial = document.getElementById("red_social").value.trim();
      const email = document.getElementById("email_empresa").value.trim();
      const telefono = document.getElementById("telefono_empresa").value.trim();
  
      if (!redSocial && !email && !telefono) {
        alert("Por favor completá al menos uno de los siguientes campos: red social, email o teléfono de la empresa.");
        return false;
      }
      return true;
    }
  </script>
    

