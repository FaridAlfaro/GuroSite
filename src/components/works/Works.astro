    .work-image {
      width: 80vw;
      height: calc(80vw / 1.618);
      margin-top: calc(1.618rem * 2);
      border-radius: 3px
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
      object-fit: cover;
      transition: clip-path 0.5s ease-out;
      clip-path: inset(0% 0% 0% 0%);
    }
  
