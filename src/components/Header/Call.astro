<section class="call-to-action">
  <span class="etiqueta">- Nosotros</span>

  <h1 class="titulo-principal">
    A Borderless<br />
    <span class="light">Creative Company</span><br />
    <strong>Where Technology<br />and Emotion Meet.</strong>
  </h1>

  <div class="video-container" id="rootNode">
    <video
      src="/video/trabajos.mp4"
      class="video"
      autoplay
      loop
      muted
      playsinline
    >
    </video>
  </div>

  <p class="descripcion">
    Nosotros ayudamos a pequeñas y medianas empresas a destacar a través de
    marcas atractivas, sitios web de alto rendimiento y automatización de
    campañas.
  </p>

  <a href="/contacto" class="btn modifier">About →</a>
</section>
<script type="module" src="/animacion/animate.js"></script>
<script type="module" src="/animacion/grafo.js"></script>
<script type="module">
  import anime from "https://cdn.jsdelivr.net/npm/animejs@3.2.1/lib/anime.es.js";

  const section = document.querySelector(".call-to-action");
  const videoContainer = document.querySelector("#rootNode");
  const video = videoContainer.querySelector("video");

  let animationTriggered = false;

  video.style.opacity = 0;

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && !animationTriggered) {
          setTimeout(() => {
            anime({
              targets: video,
              opacity: 1,
              easing: "easeOutCubic",
              duration: 1000,
            });
            animationTriggered = true;
          }, 1000);
        }
      });
    },
    { threshold: 0.4 },
  );

  observer.observe(section);

  window.addEventListener("scroll", () => {
    if (!animationTriggered) return;

    const scrollY = window.scrollY;
    const offsetTop = section.offsetTop;
    const scrollOffset = scrollY - offsetTop;

    if (scrollOffset > 0) {
      video.style.transform = `translateY(${scrollOffset * -0.4}px)`;
    }
  });
</script>

